{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "title",
    "type",
    "date_event",
    "source_title",
    "verification_status"
  ],
  "properties": {
    "area": {
      "enum": [
        "history",
        "entertainment",
        "metaphysics"
      ]
    },
    "type": {
      "enum": [
        "primary",
        "secondary",
        "commentary",
        "rumor"
      ]
    },
    "verification_status": {
      "enum": [
        "pending",
        "approved",
        "rejected"
      ]
    },
    "date_event": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    }
  },
  "additionalProperties": true
}